<!-- addwaterintake.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Add Waterintake" }) %>

  <body>
    <%- include('partials/navbar') %>

    <div class="content">
      <div class="create">
        <h2>Add a New Waterintake</h2>
        <form action="/addWaterintake" method="POST">
          
          <label>Date:</label
          ><input type="date" value="" id="date" name="date" required />

          <label>AmountInLiters:</label
            ><input type="number" value="" id="amountInLiters" name="amountInLiters" required />

            <label>Comments:</label
              ><input type="text" value="" id="comments" name="comments" required />

          <button type="submit">Add Waterintake</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>